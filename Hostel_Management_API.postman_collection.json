              "mode": "raw",
              "raw": "{\n  \"username\": \"newstudent\",\n  \"password\": \"password123\",\n  \"firstName\": \"New\",\n  \"lastName\": \"Student\",\n  \"email\": \"newstudent@example.com\",\n  \"phoneNumber\": \"1234567890\",\n  \"role\": \"STUDENT\",\n  \"address\": \"123 New Street\",\n  \"emergencyContact\": \"0987654321\"\n}"
            },
            "url": {
